<%- include('../includes/header.ejs') %>
<%- include('../includes/navigation.ejs') %>
  <div class="content-wrapper">
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box box-info">
                  <div class="box-header">
                      <h3 class="box-title"><%- title %></h3>
                    </div>
                </div>
              </div>
          </div>
        <div class="row">
            <div class="col-xs-12">
              <div class="box box-info">
                <form method="POST" class="ajaxForm">
                  <div class="box-body">
                        <%- reg_form.toHTML(); %>
                    </div>
                    <div class="box-footer">
                      <button type="submit" class="btn btn-primary">Submit</button> or <a href="javascript:history.go(-1);">cancel</a>
                    </div>
                  </form>
              </div>
            </div>
          </div>
    </section>
  </div>
  <%- include('../includes/scripts.ejs'); %>

  <script type="text/javascript">
    $(document).on("change",'#id_logo_type',function(){
      if($(this).val() == "1"){
        $("#id_logo_text").parent().show();
        $("#id_darktheme_logo").parent().hide();
        $("#id_lightheme_logo").parent().hide();
      }else{
        $("#id_logo_text").parent().hide();
        $("#id_darktheme_logo").parent().show();
        $("#id_lightheme_logo").parent().show();
      }
    })
    $(document).ready(function(){
      $("#id_logo_type").trigger("change");
    })
  </script>